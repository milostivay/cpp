Задание:от 03.04
программа принимает число [1, 7] и сообщает название дня недели. Перед этим она уточняет в какой форме его показать: короткой или длинной (ср/среда)


#include <iostream>
#include <string>
#include <map>

using namespace std;

int main() {
    // Создаем словари для дней
    map<int, string> longDays = {
        {1, "Понедельник"},
        {2, "Вторник"},
        {3, "Среда"},
        {4, "Четверг"},
        {5, "Пятница"},
        {6, "Суббота"},
        {7, "Воскресенье"}
    };

    map<int, string> shortDays = {
        {1, "пн"},
        {2, "вт"},
        {3, "ср"},
        {4, "чт"},
        {5, "пт"},
        {6, "сб"},
        {7, "вс"}
    };

    // Запрашиваем формат 
    cout << "Выберите формат: 1 - кратко, 2 -полное  ";
    int format;
    cin >> format;

    // Проверяем ннормальное ли зрение
    while (format != 1 && format != 2) {
        cout << "Ошибка. Введите 1 или 2: ";
        cin >> format;
    }

    // Запрашиваем номер дня недели
    cout << "Введите номер дня недели 1-7: ";
    int day;
    cin >> day;

    // Проверяем 
    while (day < 1 || day > 7) {
        cout << "Ошибка, у нас всего 7 дней в неделе: ";
        cin >> day;
    }

    // Выводим название дня недели в зависимости от формата
    if (format == 1) {
        cout << "Сегодня: " << shortDays[day] << endl;
    } else {
        cout << "Сегодня: " << longDays[day] << endl;
    }

    return 0;
}
